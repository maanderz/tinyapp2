<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #ff7f50; min-width: 950px;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>
    <form action="/registration" method="GET">
        <button type="submit" class="btn btn-warning btn-sm" style="color:white; margin-bottom: 3.6px;">Register</button>
      </div>
    </form>
    <% } else { %>
    <span style="margin-right: 20px"> <%= user.email %> </span>
    <form action="/logout" method="POST">
      <button type="submit" class="btn btn-danger btn-sm" style="color:white; margin-bottom: 3.6px;">Logout</button>
    </form>
    <% } %>
  </nav>
</header>