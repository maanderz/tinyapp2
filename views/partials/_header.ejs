<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #ff7f50; min-width: 950px;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!username) { %>
    <form action="/login" method="POST">
      <div class="form-group mb-2" style="margin-bottom:0!important;">
        <label for="username" style="color: white"> Username:</label>
        <input type="text" name="username" placeholder="" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-warning btn-sm" style="color:white; margin-bottom: 3.6px;">Sign In</button>
      </div>
    </form>
    <% } else { %>
    <% console.log('123',username) %>
    <span> <%= username %> </span>
    <form action="/logout" method="POST">
      <button type="submit" class="btn btn-danger btn-sm" style="color:white; margin-bottom: 3.6px;">Logout</button>
    </form>
    <% } %>
  </nav>
</header>